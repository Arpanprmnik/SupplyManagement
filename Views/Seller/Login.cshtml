@{
    ViewBag.Title = "Seller Login";
    ViewBag.FullWidth = true;
}

<div class="seller-auth-wrapper">

    <div class="seller-auth-card">

        <h2 class="seller-title">Seller Portal</h2>
        <p class="seller-subtitle">Login to manage your products & orders</p>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        @using (Html.BeginForm(null, null, FormMethod.Post))
        {
            <div class="form-group">
                <input type="email" name="email" required />
                <label>Email Address</label>
            </div>

            <div class="form-group">
                <input type="password" name="password" required />
                <label>Password</label>
            </div>

            <button class="seller-btn">Login</button>

            <div class="signup-link">
                <a href="/Seller/Signup">Create seller account</a>
            </div>
        }

    </div>

</div>

<style>
    /* Remove white spacing */
    

    /* BACKGROUND FULL SCREEN */
    .seller-auth-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg,#11998e,#38ef7d);
        font-family: 'Segoe UI', sans-serif;
    }

    /* CARD */
    .seller-auth-card {
        width: 360px;
        background: white;
        padding: 40px;
        border-radius: 18px;
        box-shadow: 0 20px 60px rgba(0,0,0,.25);
    }

    /* TITLE */
    .seller-title {
        text-align: center;
        font-weight: 600;
    }

    .seller-subtitle {
        text-align: center;
        color: #666;
        margin-bottom: 30px;
    }

    /* FLOAT INPUTS */
    .form-group {
        position: relative;
        margin-bottom: 22px;
    }

        .form-group input {
            width: 100%;
            padding: 14px 12px;
            border: 1px solid #ccc;
            border-radius: 10px;
            outline: none;
            background: transparent;
        }

        .form-group label {
            position: absolute;
            top: 12px;
            left: 12px;
            color: #777;
            background: white;
            padding: 0 5px;
            transition: .2s;
        }

        /* FLOAT EFFECT */
        .form-group input:focus + label,
        .form-group input:valid + label {
            top: -8px;
            font-size: 12px;
            color: #11998e;
        }

    /* BUTTON */
    .seller-btn {
        width: 100%;
        padding: 12px;
        border: none;
        border-radius: 12px;
        background: linear-gradient(135deg,#11998e,#38ef7d);
        color: white;
        font-weight: 600;
        transition: .25s;
    }

        .seller-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(0,0,0,.2);
        }

    /* LINK */
    .signup-link {
        text-align: center;
        margin-top: 15px;
    }

        .signup-link a {
            text-decoration: none;
            color: #11998e;
            font-weight: 500;
        }
</style>
