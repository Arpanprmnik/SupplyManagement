    @section scripts {
        <script>
        $(document).ready(function () {
            var table = $('#productsTable').DataTable({
            ajax: {
                url: '@Url.Action("GetInventory", "Manager")',
                type: 'GET',
                dataSrc: 'data'
                },
                columns: [
                    { data: 'ProductName' },
                    { data: 'WarehouseName' },
                    {
                        data: 'Quantity',
                        render: function (data) {

                            if (data == 0)
                                return '<span class="badge bg-danger fs-6">Out of Stock</span>';

                            if (data <= 3)
                                return '<span class="badge bg-warning fs-6">' + data + '</span>';


                            return '<span class="badge bg-info fs-6">'+data+'</span>'

                        }
                    }
                ],
            paging: true,
            searching: true,
            ordering: true
            })
        });
        </script>
    }
