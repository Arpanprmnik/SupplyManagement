@model IEnumerable<SupplyChain.Models.OrderViewModel>

<div class="mb-3 d-flex justify-content-between">
    <h2>Manager Dashboard</h2>

    <a href="/Manager/Logout" class="btn btn-outline-danger">
        Logout
    </a>
</div>

<a href="/Manager/Inventory" class="btn btn-primary mb-3">
    Inventory
</a>
<table class="table table-bordered" id="productsTable">
    <thead>
        <tr>
            <th>Order Id</th>
            <th>Product</th>
            <th>Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.ID</td>
                <td>@order.ProductName</td>
                <td>@order.OrderDate.ToString("dd-MMM-yyyy")</td>
                <td>@order.Status</td>
                <td>
                    @using (Html.BeginForm("UpdateStatus", "Manager", FormMethod.Post))
                    {
                        @Html.Hidden("orderId", order.ID)

                        @Html.DropDownList(
                            "status",
                            new SelectList(new[] { "Approved", "Rejected" }),
                            "-- Select --",
                            new { @class = "form-control", style = "width:150px; display:inline;" }
                        )

                        <button type="submit" class="btn btn-sm btn-primary">
                            Update
                        </button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>


@section scripts {
    <script>
        $(document).ready(function () {
            $('#productsTable').DataTable({
                paging: true,
                searching: true,
                ordering: true
            });
        });
    </script>
}
